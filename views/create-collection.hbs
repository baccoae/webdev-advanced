<h1 class="mb-4">Create your own <span class="bg-primary text-italic text-light px-2">Collection</span></h1>
{{#if validationErrors.length}}
    <div class="toast toast-error mb-4">
        <p>Could not create a new collection because of the following errors : </p>
        <ul>
            {{#each validationErrors}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}
<div class="container mb-6">
    <div class="columns">
        <div class="column col-1"></div>
        <div class="column col-6 mr-4">
            <form action="" method="post">
                <div class="form-group mt-3">
                    <label for="Collection title" class="text-small form-label">What should your collection be called ?</label>
                    <input type="text" name="collectionTitle" class="form-input" placeholder="Title" value="{{collectionTitle}}" />
                </div>

                <div class="form-group mt-3">
                    <label for="Collection title" class="text-small form-label">Describe your Collection in a few words
                        <span class="text-gray">(120 characters max.) :</span></label>
                    <textarea type="Textarea" name="collectionDesc" maxlength="120" class="form-input" placeholder="Description">{{collectionDesc}}</textarea>
                </div>

                <input type="submit" class="btn btn-primary px-3" value="Create Collection" />
            </form>
        </div>
        <div class="column col-4">
            <img src="/images/undraw_add_notes.svg" alt="" class="img-responsive ml-4" />
        </div>
    </div>
</div>